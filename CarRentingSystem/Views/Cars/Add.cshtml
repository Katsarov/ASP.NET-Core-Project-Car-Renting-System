@model AddCarFormModel

@{ 
    ViewBag.Title = "Add Car";
}



<div class=" container">
    <div class="row">
        <div class="offset-md-2 col-md-8 col-sm-12">
            <h2 class="heading-margin text-center">@ViewBag.Title</h2>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Brand"></label>
                    <input asp-for="Brand" class="form-control" placeholder="BMV, Mercedes, Tesla, etc...">
                    <span asp-validation-for="Brand" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model"></label>
                    <input asp-for="Model" class="form-control" placeholder="659D, S-Class, etc...">
                    <span asp-validation-for="Model" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" rows="4" class="form-control" placeholder="This is the perfect car..."></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here ...">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
                    <span asp-validation-for="Year" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Whatever">
                    <label asp-for="Whatever">I agree</label>
                    <span asp-validation-for="Whatever" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="small text-danger"></span>
                </div>


                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>
